@model Mission06_Bateman.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete Movie</h1>

<div class="alert alert-warning" role="alert">
    Are you sure you want to delete this movie? This action cannot be undone.
</div>

<div class="card mb-3">
    <div class="card-body">
        <p class="mb-0"><strong>@(Model.Title ?? "â€”")</strong> (@Model.Year)</p>
    </div>
</div>

<form asp-controller="Movies" asp-action="DeleteConfirmed" method="post" class="d-inline">
    <input type="hidden" name="id" value="@Model.MovieId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
