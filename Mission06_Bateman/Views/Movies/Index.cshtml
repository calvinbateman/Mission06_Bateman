@model List<Mission06_Bateman.Models.Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<h1>Movie Collection</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Edited</th>
                <th>Copied to Plex</th>
                <th>Director</th>
                <th>Rating</th>
                <th class="text-nowrap">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@(m.Title ?? "—")</td>
                    <td>@m.Year</td>
                    <td>@(m.Edited == true ? "Yes" : "No")</td>
                    <td>@(m.CopiedToPlex == true ? "Yes" : "No")</td>
                    <td>@(m.Director ?? "—")</td>
                    <td>@(m.Rating ?? "—")</td>
                    <td class="text-nowrap">
                        <a class="btn btn-sm btn-primary" asp-controller="Movies" asp-action="Edit" asp-route-id="@m.MovieId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-controller="Movies" asp-action="Delete" asp-route-id="@m.MovieId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
