@model Mission06_Bateman.Models.Movie

@{
    ViewData["Title"] = Model?.MovieId != 0 ? "Edit Movie" : "Add a Movie";
    var isEdit = Model?.MovieId != 0;
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<h1>@(isEdit ? "Edit Movie" : "Add a Movie")</h1>

<form asp-action="@(isEdit ? "Edit" : "Create")" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="MovieId" />
    <input type="hidden" asp-for="CategoryId" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control" placeholder="e.g. PG-13, TV-14, NR" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Edited</label>
        <select asp-for="Edited" class="form-select">
            <option value="">(Choose Yes or No)</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Copied to Plex</label>
        <select asp-for="CopiedToPlex" class="form-select">
            <option value="">(Choose Yes or No)</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label"></label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <div class="form-text">Max 25 characters.</div>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@(isEdit ? "Save Changes" : "Add Movie")</button>
    <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
